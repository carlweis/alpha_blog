<%= form_for @article do |f| %>
<%= render 'errors' %>
<div class="form-group">
	<%= f.label :title %><br>
	<%= f.text_field :title, :class => 'form-control', :placeholder => 'Enter a title' %>
</div>
<div class="form-group">
	<%= f.label :description %><br><br>
	<%= f.text_area :description, :rows => 10, :class => 'form-control', :placeholder => 'Enter the article content' %>
</div>
<div class="form-group">
	<%= link_to 'Cancel', articles_path, :class => 'btn btn-default' %>
	<%= f.submit 'Create Article', :class => 'btn btn-success pull-right' %>
</div>
<% end %>