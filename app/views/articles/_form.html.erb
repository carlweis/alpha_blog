<%= render 'errors' %>
<%= form_for @article, :html => {:class => 'form-horizontal', :role => 'form'} do |f| %>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= f.label :title %>
	</div>
	<div class="col-sm-8">
		<%= f.text_field :title, :class => 'form-control', :placeholder => 'Enter a title' %>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= f.label :description %>
	</div>
	<div class="col-sm-8">
		<%= f.text_area :description, :rows => 10, :class => 'form-control', :placeholder => 'Enter the article content' %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-8 col-md-offset-2 text-center">
		<%= link_to 'Cancel', articles_path, :class => 'btn btn-default pull-left' %>
		<%= f.submit 'Save Article', :class => 'btn btn-success pull-right' %>
	</div>
</div>
<% end %>