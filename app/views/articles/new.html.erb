<h1>New Article</h1>

<%= form_for @article do |f| %>
<div class="form-group">
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</div>
<div class="form-group">
	<%= f.label :description %><br><br>
	<%= f.text_area :description %>
</div>

<div class="form-group">
	<%= f.submit 'Create Article' %>
</div>
<% end %>