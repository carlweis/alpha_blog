<h1>All Articles</h1>

<table>
	<caption>List of all Articles</caption>
	<thead>
		<tr>
		  <th>ID</th>
			<th>Title</th>
		  <th>Description</th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
			<tr>
				<td><%= article.id %></td>
				<td><%= article.title %></td>
				<td><%= article.description %></td>
			</tr>
		<% end %>
		
	</tbody>
</table>