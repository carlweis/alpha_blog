<h1>All Articles</h1>
<%= link_to 'Create Article', new_article_path, :class => 'btn btn-primary pull-right' %>
<table class="table table-bordered table-striped">
	<caption>List of all Articles</caption>
	<thead>
		<tr>
		  <th>ID</th>
			<th>Title</th>
		  <th>Description</th>
		  <th></th>
		  <th></th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
			<tr>
				<td><%= article.id %></td>
				<td><%= article.title %></td>
				<td><%= article.description %></td>
				<td><%= link_to 'Show', article_path(article) %>
				<td><%= link_to 'Edit', edit_article_path(article) %>
			</tr>
		<% end %>
		
	</tbody>
</table>